<style>
    .banner {
        position: relative;
        width: 100%;
        height: auto;
        overflow: hidden;
    }

    .banner__content {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .banner__image img {
        width: 100%;
        height: auto;
    }
